{
  "preCommit": {
    "scripts": {
      "after": [
        {
          "cmd": "./runtests.sh",
          "passGitArgs": false
        }
      ]
    }
  },
  "prePush": {},
  "commitMsg": {
    "firstWordImperative": true,
    "maxSummaryLength": 72,
    "maxContentLength": 72,
    "summaryIgnoreUrls": true,
    "contentIgnoreUrls": true,
    "lineAfterSummaryMustBeBlank": true
  }
}
